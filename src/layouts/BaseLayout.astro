---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BackToTop from "../components/BackToTop.astro";
import SEOHead from "../components/SEOHead.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import "@fontsource/inter";

interface Props {
	title: string;
	description?: string;
	wide?: boolean;
	image?: string;
	article?: {
		publishedTime: string;
		modifiedTime?: string;
		author?: string;
		tags?: string[];
	};
}

const {
	title,
	description = "技術分享、思考與生活的個人部落格。",
	wide = false,
	image,
	article,
} = Astro.props;
---

<!doctype html>
<html lang="zh-TW" class="h-full antialiased scroll-smooth dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/icon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>

		<!-- SEO Meta Tags -->
		<SEOHead
			title={title}
			description={description}
			image={image}
			article={article}
		/>

		<!-- View Transitions for faster page navigation -->
		<ViewTransitions />

		<!-- Preload critical font -->
		<link
			rel="preload"
			href="/fonts/inter-latin-400-normal.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
	</head>
	<body
		class="flex flex-col min-h-full bg-gray-950 text-gray-100 font-sans selection:bg-violet-900 selection:text-violet-100 animate-fade-in"
	>
		<Header />

		<main
			class={`flex-grow w-full mx-auto px-6 py-8 sm:py-12 ${wide ? "max-w-6xl" : "max-w-3xl"}`}
		>
			<slot />
		</main>

		<Footer />
		<BackToTop />
	</body>
</html>
