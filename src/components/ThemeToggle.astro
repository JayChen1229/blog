<button
    id="theme-toggle"
    type="button"
    class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center transition-colors"
    aria-label="切換深色模式"
>
    <!-- Moon icon: visible in light mode (html doesn't have .dark), hidden in dark mode -->
    <svg
        class="w-5 h-5 block dark:hidden"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
        ></path>
    </svg>
    <!-- Sun icon: hidden in light mode, visible in dark mode -->
    <svg
        class="w-5 h-5 hidden dark:block"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h1a1 1 0 100 2h-1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            fill-rule="evenodd"
            clip-rule="evenodd"></path>
    </svg>
</button>

<script>
    function setupThemeToggle() {
        const toggleBtn = document.getElementById("theme-toggle");
        if (!toggleBtn) return;

        // Remove any existing listeners to avoid duplicates
        const newBtn = toggleBtn.cloneNode(true);
        toggleBtn.parentNode?.replaceChild(newBtn, toggleBtn);

        newBtn.addEventListener("click", () => {
            const isDark = document.documentElement.classList.contains("dark");

            if (isDark) {
                document.documentElement.classList.remove("dark");
                localStorage.setItem("theme", "light");
            } else {
                document.documentElement.classList.add("dark");
                localStorage.setItem("theme", "dark");
            }
        });
    }

    // Run on DOMContentLoaded
    document.addEventListener("DOMContentLoaded", setupThemeToggle);

    // Also run immediately if DOM is already loaded
    if (document.readyState !== "loading") {
        setupThemeToggle();
    }

    // Re-run on Astro page transitions
    document.addEventListener("astro:after-swap", setupThemeToggle);
</script>
